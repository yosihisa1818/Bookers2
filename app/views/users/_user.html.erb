<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10">
      <h2>User info</h2>
      <thead>
        <tr>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
        </tr>
      </thead>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th colspan="2">
                <%= link_to edit_user_path(@user.id), class:"fas fa-user-cog btn btn-outline-secondary btn-block" do %>
                <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>